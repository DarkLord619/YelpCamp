<% include partials/header %>
<div class="container   ">
<h1 class="display-4 text-center m-4 lead">Add a new campground to <%=campground.name%></h1>

<div class="row justify-content-center m-5  ">

    <div   class="col-lg-6 col-md-4 col-sm-3 w-25 ">
      <form  action="/campgrounds/<%=campground._id%>/comments" method="POST" >

      <div class="form-group ">
            <input type="textarea" name="comment[text]"  class="form-control form-control-lg" placeholder="Enter comment">
      </div>




      <div class="form-group mt-3">
         <button  type="submit" class="btn btn-outline-primary btn-block" name="button">Add</button>
      </div>


    </form>

    </div>


</div>
<div class="text-center m-4">
  <a href="/campgrounds/<%=campground._id %>">Go Back to the Picture</a>
</div>
</div>
<% include partials/footer %>
