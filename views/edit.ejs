<% include partials/header %>
<div class="container   ">
<h1 class="display-4 text-center m-4 lead">Edit <%=campground.name%></h1>

<div class="row justify-content-center m-5  ">

    <div   class="col-lg-6 col-md-4 col-sm-3 w-25 ">
      <form  action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST" >

      <div class="form-group">
            <input type="text" name="campground[name]"  class="form-control" placeholder="Enter image name" value="<%=campground.name%>">
      </div>

       <div class="form-group">
    <input type="text" name="campground[img]"  class="form-control" placeholder="Enter image url" value="<%=campground.image %>">
      </div>
      <div class="form-group">
        <input type="number" name="campground[price]" class="form-control" value="campground.price" min="0.01" step="0.01">
      </div>


      <div class="form-group">
        <input type="text" name="campground[description]" class="form-control" placeholder="Enter description"value="<%=campground.description%>">
      </div>

      <div class="form-group">
         <button  type="submit" class="btn btn-outline-primary btn-block" name="button"> Save Changes </button>
      </div>


    </form>

    </div>


</div>
<div class="text-center m-4">
  <a href="/campgrounds/<%=campground._id%>">Go Back</a>
</div>
</div>
<% include partials/footer %>
