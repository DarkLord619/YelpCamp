<% include partials/header %>
<div class="container   ">
<h1 class="display-4 text-center m-4 lead">Add a new campground</h1>

<div class="row justify-content-center m-5  ">

    <div   class="col-lg-6 col-md-4 col-sm-3 w-25 ">
      <form  action="/campgrounds" method="POST" >

      <div class="form-group">
            <input type="text" name="name"  class="form-control" placeholder="Enter image name">
      </div>

       <div class="form-group">
    <input type="text" name="img"  class="form-control" placeholder="Enter image url">
      </div>
      <div class="form-group">
            <input type="text" name="description"  class="form-control" placeholder="Enter image description">
      </div>

      <div class="form-group">
        <input type="number" name="price" class="form-control" placeholder="Enter Price" min="0.01" step="0.01">
      </div>

      <div class="form-group">
         <button  type="submit" class="btn btn-outline-primary btn-block" name="button">Add</button>
      </div>


    </form>

    </div>


</div>
<div class="text-center m-4">
  <a href="/campgrounds">Go Back to campgrounds</a>
</div>
</div>
<% include partials/footer %>
