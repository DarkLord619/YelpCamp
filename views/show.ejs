<% include partials/header %>

<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <ul class="list-group">
             <li class="list-group-item active">Info 1</li>
             <li class="list-group-item">Info 1</li>
             <li class="list-group-item">Info 1</li>
      </ul>
     </div> <div class="col-md-9 ">
            <div class="img-thumbnail  ">
                  <img class="img-fluid  w-100 h-75" src="<%= campground.image%>" alt="">
                   <div class="mt-3 clearfix">
                      <h5 class="float-left clearfix "><a href="" class=""><%=campground.name %></a></h5>
                     <h6 class="text-right"><%=campground.price%>$/night</h6>

                   </div>
                  <p class="clearfix"><%=campground.description %></p>
                  <p class="font-italic">Submitted by <strong><%=campground.author.username%></strong></p>
                   <%var currentuser=currentUser.username; if(currentuser===(campground.author.username)) {%>
                     <a class="btn btn-warning text-light float-left mr-4  " href="/campgrounds/<%=campground._id %>/edit">Edit</a>
                     <%}%>

                     <%var currentuser=currentUser.username; if(currentuser===(campground.author.username)) {%>
                       <form class="form-group mt-3 " action="/campgrounds/<%=campground._id %>?_method=DELETE" method="post">
                             <button type="submit" class="btn btn-danger" name="button">Delete</button>
                       </form>

                       <%}%>
            </div>

            <div class="card mt-3">
              <div class="card-header">
                <div class="d-flex flex-row justify-content-end">
                     <a class="btn btn-success pull-right" href="/campgrounds/<%=campground._id %>/comments/new">Add new Comment</a>
                </div>

              </div>
              <div class="card-body">

                  <%campground.comments.forEach((cur)=>{%>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="mt-3 clearfix">
                         <h5 class="float-left clearfix "><a href="" class="text-info"><strong><%=cur.author.username%></strong></a></h5>
                        <h6 class="text-right">10 days ago</h6>

                      </div>
                     <p class="clearfix"><%=cur.text %></p>
                      <% });%>



                    </div>

                  </div>

                </div>


            </div>

    </div>

  </div>

</div>













